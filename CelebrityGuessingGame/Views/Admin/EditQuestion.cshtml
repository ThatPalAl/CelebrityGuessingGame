@model CelebrityGuessingGame.Models.Question

@{
    ViewData["Title"] = "Edit Question";
}

<h1>Edit Question</h1>

<form method="post" asp-action="EditQuestion">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label asp-for="QuestionText" class="form-label">Question Text</label>
        <input asp-for="QuestionText" class="form-control" />
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>

    <h3>Options:</h3>
    @for (int i = 0; i < Model.Options.Count; i++)
    {
        <div class="mb-3">
            <label asp-for="Options[i].OptionText" class="form-label">Option @i+1</label>
            <input asp-for="Options[i].OptionText" class="form-control" />
            <span asp-validation-for="Options[i].OptionText" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
