@model CelebrityGuessingGame.Models.Question

@{
    ViewData["Title"] = "Create New Question";
}

<h1>Create New Question</h1>

<form method="post" asp-action="CreateQuestion">
    <div class="mb-3">
        <label asp-for="QuestionText" class="form-label">Question Text</label>
        <input asp-for="QuestionText" class="form-control" />
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>