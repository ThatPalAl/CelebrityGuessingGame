@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome to the Celebrity Guessing Game!</h1>

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
{
    <p style="color: red;">@TempData["ErrorMessage"]</p>
}

<form method="get" asp-controller="Game" asp-action="FetchCelebrity">
    <label for="celebrityName">Enter a Celebrity's Name:</label>
    <input type="text" id="celebrityName" name="name" required />
    <button type="submit">Fetch Celebrity</button>
</form>
