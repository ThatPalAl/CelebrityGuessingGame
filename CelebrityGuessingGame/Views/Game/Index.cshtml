@model List<CelebrityGuessingGame.Models.Celebrity>

<h1>Select a Celebrity</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p style="color: red;">@ViewBag.ErrorMessage</p>
}
else
{
    <form method="post" asp-controller="Game" asp-action="ChooseCelebrity">
        <select id="celebrities" name="selectedCelebrity">
            @foreach (var celebrity in Model)
            {
                <option value="@celebrity.Name">@celebrity.Name</option>
            }
        </select>
        <button type="submit">Start Game</button>
    </form>
}