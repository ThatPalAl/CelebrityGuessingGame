@{
    ViewData["Title"] = "Answer the Question";
}

<h2>@TempData["CurrentQuestion"]</h2>

<form method="post" asp-controller="Game" asp-action="AnswerQuestion">
    <button type="submit" name="answer" value="Yes" class="btn btn-primary">Yes</button>
    <button type="submit" name="answer" value="No" class="btn btn-danger">No</button>
</form>